<!doctype html>
<html>
<head>
	<title>Registrar Ingreso</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<meta name="viewport" content="width=device-width, initial-scale=1 user-scalable=no">
	<style>
		body 		{ padding-top:40px; }
	</style>
	<script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
	<script type="text/javascript">
		$(document).ready(function() {    
		    function clientCounter(){
		        //alert("hola!");

		        //value = $('#value').text("ya valio chorizo");
		        //var dataString = 'value='+value;

		        $.ajax({
		            type: "GET",
		            url: "ajax",
		            //url: "www.google.com",
		            //data: dataString,
		            success: function(data) {
		                $('#value').text(data);
		            },error: function(err){
		            	$('#value').text(err.code);
		            }
		        });
		    }

		    setInterval(clientCounter, 4000);
		});
	</script>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	

	<div class="row">
		<div class="col-sm-9">
			<h1><span class="fa fa-sign-in"></span> Registrar Ingreso</h1>
		</div>
		<div class="col-sm-3">
			<h1># <span id="value"></span></h1>
		</div>
	</div>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert <%= msgtype%>"><%= message %></div>
	<% } %>

	<% if (client != null) { %>
		<div class="jumbotron">
			<!-- CLIENT INFORMATION -->
		
				<h3><span class="fa fa-user"></span> <%= client.nombres+" "+client.apellidos %></h3>

					<p>
						<strong>Edad:</strong>: <%= edad %><br>
						<strong>Acceso</strong>: Concedido <br>
						<strong>Hora de ingreso:</strong>: <%= new Date(new Date().getTime()).toLocaleString() %><br>
					</p>

		</div>
	<% } %>


	<!-- REGISTER FORM -->
	<form action="/login" method="post">
		<div class="form-group">
			<label>Documento de Identidad</label>
			<input type="number" class="form-control" required name="ci" autofocus>
		</div>
		
		<button type="submit" class="btn btn-warning btn-lg">Ingresar</button>
	</form>

	<br>

	<p>Registrar cliente? <a href="/signup">Registrar</a></p>
	<p>ir al <a href="/">Home</a>.</p>

	<hr>
